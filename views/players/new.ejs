<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/players/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>
    Please first ensure that the Player is not in the dropdown 
    <select>
      <% players.forEach(player => { %>
        <option><%= player.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-player-form" action="/players" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input">
    <label for="position-input">Position:</label>
    <select name="position" id="position-select">
      <option value="GK">GK</option>
      <option value="LFB">LFB</option>
      <option value="RFB">RFB</option>
      <option value="CB">CB</option>
      <option value="Sweeper">Sweeper</option>
      <option value="LMF">LMF</option>
      <option value="DMF">DMF</option>
      <option value="RMF">RMF</option>
      <option value="AMF">AMF</option>
      <option value="Central">Central</option>
      <option value="Striker">Striker</option>
    </select>
    <label>
      Injury?
      <input 
        type="checkbox" 
        name="injury" 
				id="injury-input"/>
    </label>
    <button type="submit">Add Player</button>
  </form>
</main>

<%- include('../partials/footer') %>