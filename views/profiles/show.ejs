<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <% if (isSelf) { %> 
    <h2>Add Your Soccer Team!</h2>
    <form action="/profiles/<%= profile._id %>/yourteam" method="POST">
      <!-- <label for="team-input">Select Your Team:</label> -->
    <select name="team">
      <% teams.forEach(team => { %>
        <option value="<%= team._id %>"><%= team.name %></option>
      <% }) %>
    </select>
      <button type="submit">Add Team🏃🏻‍♀️🏃🏻🏃🏻‍♂️</button>
    </form>
    <% } %>
    <% if (profile.team)  {%>
      <h2>
        <%= isSelf ? "Your team is" : `${profile.name} has` %> 👏👊<%= profile.team.name %>👊👏
      </h2>
      
    <% } else { %>
      <h2>
        <%= isSelf ? "You don't have" : `${profile.name} doesn't have` %> a team yet!
      </h2> 
    <% } %> 
  </main>
  
  <%- include('../partials/footer') %>